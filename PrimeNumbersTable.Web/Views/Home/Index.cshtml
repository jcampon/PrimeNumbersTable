@model PrimeNumbersTable.Web.Models.UserInputDisplayModel

@{
    ViewBag.Title = "Home Page";
}

<div class="row" style="margin-top: 20px;">

    @using (Html.BeginForm("Generate", "PrimeNumbersTable", FormMethod.Get))
    {
        

        <fieldset>
            @Html.DisplayNameFor(x => x.TotalOfNumbers)
            <br />
            @Html.EditorFor(m => m.TotalOfNumbers, Model.TotalOfNumbers)
            <input type="submit" value="Display table of numbers" />
            <br/>
            @Html.ValidationSummary()
        </fieldset>
    }

</div>