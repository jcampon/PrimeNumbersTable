@model PrimeNumbersTable.Web.Models.UserInputDisplayModel

@{
    ViewBag.Title = "Home Page";
}

<div class="row" style="margin-top: 20px;">

    @using (Html.BeginForm(MVC.PrimeNumbersTable.ActionNames.Generate, MVC.PrimeNumbersTable.Name, FormMethod.Get))
    {
        

        <fieldset>
            @Html.DisplayNameFor(x => x.TotalOfPrimeNumbers)
            <br />
            @Html.EditorFor(m => m.TotalOfPrimeNumbers, Model.TotalOfPrimeNumbers)
            <input type="submit" value="Display table of prime numbers" />
            <br/>
            @Html.ValidationSummary()
        </fieldset>
    }

</div>